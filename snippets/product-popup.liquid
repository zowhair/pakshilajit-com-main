<div class="product-popup-main" js-main-popup>
  <div class="product-popup_overlay " js-overlay></div>
  <div class="wrapper">
    <div class="main-grid">
      <div class="product-popup_header">
        <div class="product-content">
          <div class="content" js-content-wrap></div>
          <div class="review" js-content-review-element></div>
        </div>
        <div class="cross-icon" js-modal-close-icon>
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
            <g clip-path="url(#clip0_1_12283)">
