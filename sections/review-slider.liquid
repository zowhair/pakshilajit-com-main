                {% if section.settings.review_section_description  != blank %}
                    <p class="text">
                        {{ section.settings.review_section_description }}
                    </p>
                {% endif %}
                
                  
            </div>
            {% if section.blocks.first != blank %}
            <div class="extra__layer">
                    <div class="swiper-container" js-custom-slider>
                        <div class="swiper-wrapper">
                            {% for block in section.blocks %}
                                <div class="swiper-slide">
                                    {% if block.settings.review_image != blank %}
                                        <div >
                                            <img src="{{ block.settings.review_image |  image_url: width: 300 }}"/>
                                        </div>
                                    {% endif %}
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                <div class="swiper-button-prev"></div>
                <div class="swiper-button-next"></div>
            </div>
            {% endif %}
            
        </div>
    </div>
</div>
<script>
    new Swiper('[js-custom-slider]', {
        spaceBetween: 10,
        slidesPerView: 'auto',    
        loop: true,
        // autoplay : {
        //     delay : 120,
        // },
        // speed: 3000,
        // parallex: true,
        // Responsive breakpoints
        breakpoints: {
            // when window width is >= 320px
            320: {
            slidesPerView: 1.5
            },
            // when window width is >= 480px
            500: {
            slidesPerView: 2.5
            },
            // when window width is >= 640px
            767: {
            slidesPerView: 4
            }
        },
        navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
        }  
    });  
</script>

{%  schema  %} 
    {
        "name": "Review Slider",
        "settings": [
            {
                "type": "text",
                "id": "review_section_title",
                "label": "Review Title"
            }, 
            {
                "type": "textarea",
                "id": "review_section_description",
                "label" : "Review Description"
            }
        ],
        "blocks": [
            {
                "name": "Review Blocks",
                "type": "review-blocks",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "review_image",
                        "label": "Review Image"
                    }
                ]

            }

        ],  
        "presets": [
            {
                "name": "Review Slider "
            }
        ]
    }
{% endschema %}