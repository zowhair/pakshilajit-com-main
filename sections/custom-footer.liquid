      "label": "Community",
      "default": "community"
    },
    {
      "type": "url",
      "id": "social_facebook_link",
      "label": "Facebook Link"
    },
    {
      "type": "url",
      "id": "social_tiktok_link",
      "label": "tiktok Link"
    },
    {
      "type": "url",
      "id": "social_instagram_link",
      "label": "Instagram Link"
    },
    {
      "type": "url",
      "id": "social_youtube_link",
      "label": "Youtube Link"
    },
    {
      "type": "header",
      "content": "Registration"
    },
    {
      "type": "text",
      "id": "register_form_title",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "register_form_description",
      "label": "Registration Description"
    },
    {
      "type": "url",
      "id": "register_btn_url",
      "label": "Registration Url"
    },
    {
      "type": "text",
      "id": "register_btn_text",
      "label": "Registration Button Label"
    },
    {
      "type": "link_list",
      "id": "choose_link",
      "label": "Choose Menu (Copyright)"
    }
  ],
  "blocks": [
    {
      "name": "Menu Block",
      "type": "menu_block",
      "settings": [
        {
          "type": "text",
          "id": "menu_title",
          "label": "Menu Title"
        },
        {
          "type": "link_list",
          "id": "choose_link",
          "label": "Choose Menu"
        }
      ]
    },
    {
      "name": "Contact",
      "type": "content_block",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "contact_text",
          "label": "contact_text"
        }
      ]
    },
    {
      "name": "Block",
      "type": "block",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Footer"
    }
  ]
}
{% endschema %}
