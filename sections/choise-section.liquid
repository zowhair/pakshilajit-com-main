{{"choise-section.css" | asset_url | stylesheet_tag}}

<div class="choise_section">
    <div class="page-width">
        {%- if section.settings.title != blank -%}
            <h2 class="title">
                {{ section.settings.title }}
            </h2>
        {%- endif -%}
        <div class="choise_section__wrapper">
            <div class="choise_section__brand-flexer">
                {%- if section.settings.logo_image != blank -%}
                    <div class="brand_logo">
                        <img src="{{ section.settings.logo_image |  image_url: width: "400x" }}" alt="">
                    </div>
                {%- endif -%}
                {%- if section.settings.logo_text -%}
                    <div class="brand_logo_text">
                        {{ section.settings.logo_text }}
                    </div>
                {%- endif -%}
            </div>
            <div class="choise_section__grid">
                {%- for block in section.blocks -%}
                    {%- if block.type == "grid_block" -%}
                        {%- if block.settings.gird-text != blank -%}
                            <div class="content_box content_text_block"> 
                                <h4 class="content_box_text">
                                    {{ block.settings.gird-text }}
                                </h4>
                            </div>
                            <div class="content_box">
                                <div class="content_box_icon">
                                    <svg class="green_icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="1em" height="1em" fill="currentColor" role="presentation" style="width:var(--rsw, 100%);height:100%" class="r-4rj3jx"><path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.267.267 0 0 1 .02-.022z"></path></svg>
                                </div>
                            </div>
                            <div class="content_box">
                                <div class="content_box_icon">
                                    <svg class="red_icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="1em" height="1em" fill="currentColor" role="presentation" style="width:var(--rsw, 100%);height:100%" class="r-1v5o4tw"><path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"></path></svg>
                                </div>
                            </div>
                        {%- endif -%}
                    {%- endif -%}
                {%- endfor -%}
            </div>
        </div>
    </div>
</div>
{% schema %}
  {
    "name": "Choise Section",
    "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "image_picker",
          "id": "logo_image",
          "label": "Logo Image"
        },
        {
          "type": "richtext",
          "id": "logo_text",
          "label": "Logo Text"
        }
    ],
    "blocks": [
      {
        "name": "Text Block",
        "type": "grid_block",
        "settings": [
            {
              "type": "text",
              "id": "gird-text",
              "label": "Grid Text"
            }
        ]
      }
    ],
    "presets": [
      {
        "name": "Choise Section"
      }
    ]
  }
{% endschema %}