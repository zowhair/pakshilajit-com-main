{{ 'health-benefits.css' | asset_url | stylesheet_tag }}
<style>
  @import url('https://fonts.googleapis.com/css2?family=Montserrat+Alternates:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');
</style>

<div class="health-container">
  <div class="page-width">
    <div class="wrapper">
      <div class="heading">
        <p class="heading__text">
          {{ section.settings.health_title }}
        </p>
      </div>

      <div class="health-descript">
        <p class="descript__text">
          {{ section.settings.health_description }}
        </p>
      </div>
      <div class="block-container">
        {% for block in section.blocks %}
          <div class="block__single-card">
            <div class="block__picture">
              {% if block.settings.icon_text_svg != blank %}
                <img src="{{ block.settings.icon_text_svg | image_url: width: 200 }}">
              {% endif %}
            </div>
            <div class="block__contant">
              {{ block.settings.icon_text }}
            </div>
          </div>
        {% endfor %}
      </div>
      <div class="sub-descript">
        <p class="sub-descript__text">
          {{ section.settings.sub_description }}
        </p>
      </div>
      <a class="link-url" href="{{ section.settings.cta_url }}">
        <span class="link-url__text">
          {{ section.settings.cta_text }}
        </span>
      </a>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Health Benefits",
  "settings": [
    {
      "type": "text",
      "label": "Title",
      "id": "health_title"
    },
    {
      "type": "textarea",
      "label": "Description",
      "id": "health_description"
    },
    {
      "type": "textarea",
      "label": "Sub Description",
      "id": "sub_description"
    },
    {
      "type": "text",
      "label": "CTA Text",
      "id": "cta_text"
    },
    {
      "type": "url",
      "label": "Add A Url",
      "id": "cta_url"
    }
  ],
  "blocks": [
    {
      "type": "icon_text",
      "name": "Icon Text",
      "settings": [
        {
          "type": "text",
          "label": "Icon Text",
          "id": "icon_text"
        },
        {
          "type": "image_picker",
          "label": "Pick an SVG",
          "id": "icon_text_svg"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Health Benefits",
      "blocks": [
        {
          "type": "icon_text"
        }
      ]
    }
  ]
}
{% endschema %}
